generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Product {
  id          String @id @default(uuid())
  article     String
  price       Float
  photo       String
  category    String
  subcategory String
  sizes       String
}

model Category {
  id   String @id @default(uuid())
  name String
}

model Subcategory {
  id   String @id @default(uuid())
  name String
}

model Address {
  id         String  @id @default(uuid())
  userId     String
  phone      String
  firstName  String
  secondName String
  postOffice Int
  city       String
  orders     Order[]
}

model Order {
  id             String          @id @default(uuid())
  useId          String
  phone          String
  firstName      String
  secondName     String
  typeOfDelivery typesOfDelivery
  status         OrderStatusesDB
  addressId      String
  address        Address         @relation(fields: [addressId], references: [id])
  orderItems     OrderItem[]
  createdAt      DateTime        @default(now())

  @@index([addressId])
}

model OrderItem {
  orderId   String
  productId String
  quantity  Int
  Order     Order  @relation(fields: [orderId], references: [id])

  @@id([orderId, productId])
  @@index([orderId])
}

model Settings {
  name  String @id
  value Int
}

enum OrderStatusesDB {
  new
  inProgress
  done
}

enum typesOfDelivery {
  creditCard
  cashOnDelivery
}
