generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Product {
  id          String @id @default(uuid())
  article     String
  price       Float
  photo       String
  category    String
  subcategory String
  sizes       String
}

model Order {
  id                   Int           @id @default(autoincrement())
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt
  status               OrderStatuses
  phone                String
  name                 String
  region               String
  city                 String
  postOfficeNumber     String
  paymentType          String
  recipientLastName    String
  recipientFirstName   String
  recipientSurnameName String?
  recipientPhone       String
  items                Json
  totalSum             Int
  userId               String?
  comment              String?
}

model Settings {
  name  String @id
  value Int
}

enum OrderStatuses {
  new
  inProgress
  done
}

enum paymentType {
  creditCard
  cashOnDelivery
}
